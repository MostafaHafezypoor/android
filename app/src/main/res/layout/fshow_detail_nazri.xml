<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/Lineartop"
        android:orientation="horizontal"
        android:background="@drawable/backgroud_top_fshowallnzri">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/imageBack"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center_vertical"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/nazriTopName"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lineartop"
            android:layout_margin="5sp"
            android:orientation="vertical"
            android:id="@+id/ccenterL">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/datePublish"
                android:gravity="right"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nazrType"
                android:textSize="20sp"
                android:gravity="right"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textSize="20sp"
                android:gravity="right"/>
        </LinearLayout>

        <ir.map.sdk_map.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ccenterL"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:visibility="gone"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="30sp"
            mapbox:mapbox_cameraZoomMax="20"
            mapbox:mapbox_cameraZoomMin="1" />
    </RelativeLayout>
</layout>