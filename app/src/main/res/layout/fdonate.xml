<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/Lineartop"
        android:orientation="horizontal"
        android:background="@drawable/backgroud_top_fshowallnzri">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/imageBack"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center_vertical"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="همیاری"
            android:id="@+id/nazriTopName"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/Lineartop"
            android:id="@+id/centerLinear">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مبلغ به تومان"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="#000" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="10sp"
                app:boxCornerRadiusTopEnd="10sp"
                app:boxCornerRadiusBottomStart="10sp"
                app:boxCornerRadiusBottomEnd="10sp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="حداکثر تا سقف 40000 تومان"/>
            </com.google.android.material.textfield.TextInputLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
               android:textColor="#000"
               android:layout_alignParentRight="true"
               android:text="نوع همیاری"/>
           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:textColor="#000"
               android:layout_alignParentLeft="true"
               android:text="انتخاب نوع"/>
       </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#A1A1A1"/>
        </LinearLayout>
        <View
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:background="#000"
            android:layout_below="@id/centerLinear"
            android:id="@+id/govieww"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerLinear"
            android:layout_toLeftOf="@id/govieww"
            android:layout_alignTop="@id/govieww"
            android:text="فهرست همیاری های کاربران"
            android:layout_marginRight="10sp"
            android:textSize="20sp"
            android:id="@+id/tvieww"
            android:textColor="#000"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvieww"
            android:id="@+id/listDonate"/>
    </RelativeLayout>
</layout>