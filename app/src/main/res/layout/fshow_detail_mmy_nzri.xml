<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/Lineartop"
        android:orientation="horizontal"
        android:background="@drawable/backgroud_top_fshowallnzri">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/imageBack"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center_vertical"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/nazriTopName"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lineartop"
            android:layout_margin="5sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical"
            android:id="@+id/ccenterL">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/datePublish"
                android:gravity="right"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nazrType"
                android:textSize="20sp"
                android:gravity="right"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textSize="20sp"
                android:gravity="right"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/footer"
            android:layout_below="@id/ccenterL">
            <ir.map.sdk_map.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                 android:visibility="gone"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="30sp"
                mapbox:mapbox_cameraZoomMax="20"
                mapbox:mapbox_cameraZoomMin="1" />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textStatus"
                android:layout_marginRight="10sp"
                android:gravity="right"
                />
           <com.google.android.material.button.MaterialButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="حذف نذری"
               android:layout_gravity="center"
               android:textColor="#FF0000"
               android:elevation="0sp"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               app:elevation="0sp"
               app:cornerRadius="50sp"
               mapbox:strokeWidth="2sp"
               android:padding="10sp"
               android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
               mapbox:strokeColor="#FF0000"
               android:id="@+id/delete"
               android:backgroundTint="#fff"
               android:drawableEnd="@drawable/baseline_delete_outline_24"/>
        </LinearLayout>

    </RelativeLayout>
</layout>