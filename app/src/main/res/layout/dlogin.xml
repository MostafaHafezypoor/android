<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   android:layout_height="400sp"
    app:cardCornerRadius="10sp"
    app:cardElevation="10sp"
    android:elevation="10sp">
<ViewFlipper
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10sp"
    android:id="@+id/viewFlipperDialog">

<!--LOGIN SEND NUMBER-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:elevation="10sp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="15sp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="100sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download"/>
    </androidx.cardview.widget.CardView>
<com.google.android.material.textview.MaterialTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ورود به داشبورد"
    android:textSize="40sp"
    android:textColor="#000"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
    android:layout_marginTop="30sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شماره موبایل خودتان را وارد کنید"
        android:textSize="20sp"
        android:textColor="#606060"
        android:textAlignment="center"
        android:layout_marginTop="10sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        android:hint="شماره موبایل"
        app:startIconDrawable="@drawable/baseline_phone_enabled_24"
        android:layout_marginTop="10sp"
        android:layout_marginRight="7sp"
        android:layout_marginLeft="7sp"
        app:boxCornerRadiusBottomEnd="20sp"
        app:boxCornerRadiusBottomStart="20sp"
        app:boxCornerRadiusTopEnd="20sp"
        app:boxCornerRadiusTopStart="20sp"
        android:layoutDirection="rtl"
        android:textDirection="rtl">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#000"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:id="@+id/number"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ورود"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="-5.4sp"
    android:textColor="#fff"
    android:textSize="30sp"
    android:enabled="false"
    android:id="@+id/btnLogin"/>
    </RelativeLayout>
<!--    SEND VERIFY CODE-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="10sp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="15sp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="100sp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/download"/>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تایید کد"
                android:textSize="40sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="30sp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/textShowNumber"
                android:textColor="#606060"
                android:textAlignment="center"
                android:layout_marginTop="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <mostafa.hafezypoor.nazri.dialog.EditTextOtp
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EditTextOtp"/>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تایید"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="-5.4sp"
            android:textColor="#fff"
            android:textSize="30sp"
            android:id="@+id/btnCode"/>
    </RelativeLayout>
</ViewFlipper>
</androidx.cardview.widget.CardView>
